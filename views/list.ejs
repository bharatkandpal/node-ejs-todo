<%- include("header") %>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">

        <% for(var i=0;i<items.length;i++) {%>
            <form method="POST" action="/delete">
                <div class="item">
                    <input type="checkbox" name="chkItem" value=<%=items[i].id%>  onchange="this.form.submit()"  />
                    <p>
                        <%=items[i].name %>
                    </p>
                    <input type="hidden" name="listName" value=<%=listTitle  %> />
                </div>
            </form>
            <%} %>



                <form action=<%=listTitle %>  method="POST" class="item">
                    <input type="text" name="item" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="btnAdd" value=<%=listTitle %> >+</button>
                </form>
    </div>


    <%- include("footer") %>